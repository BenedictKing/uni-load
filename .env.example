# 环境变量配置

# gpt-load 多实例配置，指定自定义配置文件路径
# 请创建 gpt-load-instances.json 文件来配置所有 gpt-load 实例（包括本地实例）
# 复制示例文件：cp gpt-load-instances.json.example gpt-load-instances.json
GPTLOAD_INSTANCES_FILE=gpt-load-instances.json

# uni-api 项目路径 (相对于当前项目)
UNI_API_PATH=../uni-api

# uni-api 配置文件路径
UNI_API_YAML_PATH=../uni-api/api.yaml

# 服务端口
PORT=3002

# 模型同步配置
ENABLE_MODEL_SYNC=true
# 360分钟=6小时检查一次模型同步
MODEL_SYNC_INTERVAL=360

# 渠道健康监控配置
ENABLE_CHANNEL_HEALTH=true
# 10分钟检查一次渠道健康
CHANNEL_CHECK_INTERVAL=10
# 连续失败3次以上则认为渠道不可用
CHANNEL_FAILURE_THRESHOLD=3